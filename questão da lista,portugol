questão 3

programa {
  funcao inicio() {
     //declaração de variaveis
     real nota1,nota2,nota3,nota4,media

     //entrada de dados
     escreva("informe a primeira nota:")
     leia(nota1)

    esreva("informe a segunda nota:")
    leia(nota2)

      esreva("informe a terceira nota:")
      leia(nota3)

      esreva("informe a quarta nota:")
      leia(nota4)

      //processamento
      media = (nota1+nota2+nota3+nota4/4)

      //saida de dados
      escreva("a media aritmetica e", media)
  }

}


questão 4

programa {
  funcao inicio() {
     //declaração de variaveis
     real gasto, gasto2, gasto3, media

      //entrada de dados
      escreva("informe o gasto do primeiro mes:")
      leia(gasto1)
      
      escreva("informe o gasto do segundo mes:")
      leia(gasto2)

      escreva("informe o gasto do terceiro mes:")
      leia(gasto3)

       //processamento
      media = ("gasto1+gasto2+gasto3/3)

      //saida de dados
      escreva("a media dos tres primeiros meses do ano e",media)

      }
}


questão 5

programa {
  funcao inicio() {
   //declaração de variaveis
    real altura,peso_ideal

    //entrada de dados
     escreva("informe a altura do homem:")
     leia(altura)

     //processamento
     peso_ideal = (72.7 * altura) -58

     //saida de dados
     escreva("o peso ideal e:",peso_ideal)
  }

}

questão 6

programa {
  funcao inicio() {
//Declaração de variavel
    real x, y, troca

    //Entrada de dados 
    escreva("Informe o primeiro valor: ")
    leia(x)
    escreva("Informe o segundo valor: ")
    leia(y)

    //Processamento 
    troca = x 
    x = y 
    y = troca

    // Saida de dados
    escreva("O valor trocado de x ", x , " O valor trocado de y ", y)
   }

}


questão 7

programa {
  funcao inicio() {
//Declaração de variável
    real raio, diametro, comprimento, area

    //Entrada de Dados
    escreva("Informe o valor do raio: ")
    leia(raio)

    //Processamento
    diametro = raio * 2
    comprimento = 3.14 * diametro
    area = (raio * raio) * 3.14

    //Saida de Dados
  escreva("Com o raio ", raio , " o diametro sera " , diametro, " o comprimento sera ", comprimento, " e area sera ", area )
  }

}
questão 8
programa {
  funcao inicio() {
    // declaraçao de variaveis
    real celcius, fahrenheit, temperatura

    //entrada de dados
    escreva("informe a temperatura em celsius: ")
    leia(celcius)

    //processamento
    fahrenheit = celcius * 9/5 + 32

    //saida de dados
    escreva(" a temperatura em fahrenhat é: ", fahrenheit)

    
  }
}
